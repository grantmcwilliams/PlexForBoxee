<?xml version="1.0"?>
<window type="window" id="14001">
	<defaultcontrol>200</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<onload lang="python">plexee.getDirectoryWindow().load()</onload>
	<onunload lang="python">plexee.getDirectoryWindow().unload()</onunload>
	
	<controls>		
		<!-- BACKGROUND =============================================================-->
		<!-- display art -->
		<control type="image">
			<width>1280</width>
			<height>720</height>
			<texture fallback="defaultbackground.png">$INFO[Container(100).ListItem.Property(image1)]</texture>
		</control>
		<control type="image">
			<width>1280</width>
			<height>720</height>
			<texture>shapes/faded.png</texture>
		</control>

		<!-- TITLE ==================================================================-->
		<control type="list" id="100">
			<posy>10</posy>
			<posx>30</posx>
			<width>1150</width>
			<height>80</height>
			
			<orientation>vertical</orientation>
			<hitrect x="0" y="0" w="0" h="0" />
			
			<itemlayout height="100">
				<control type="image">
					<width>1</width>
					<height>1</height>
				</control>
			</itemlayout>
			
			<focusedlayout>
				<control type="label">
					<height>80</height>
					<width>1150</width>
					
					<font>font38</font>
					<textcolor>FFFFFFFF</textcolor>
					
					<label>[B]$INFO[ListItem.Property(custom:title1)][/B]</label>
				</control>
				
				<control type="label">
					<posy>45</posy>
					<height>40</height>
					<width>800</width>
					
					<font>font24</font>
					<textcolor>FF2BB6EA</textcolor>
					
					<label>[B]$INFO[ListItem.Property(custom:title2)][/B]</label>
				</control>
				
				<control type="label">
					<posy>45</posy>
					<posx>1075</posx>
					<height>50</height>
					<width>200</width>
					
					<font>font24</font>
					<textcolor>FF2BB6EA</textcolor>
					<align>right</align>
					
					<label>$INFO[ListItem.Property(custom:size),[COLOR FFFFFFFF]Items: [/COLOR],]</label>
				</control>
			</focusedlayout>
		</control>

		<!-- SECONDARY ==============================================================-->
		<control type="list" id="200">
			<posx>40</posx>
			<posy>130</posy>
			<width>280</width>
			<height>560</height>
			
			<onright>300</onright>
			<onup lang="python">plexee.getDirectoryWindow().moveUpFromContent()</onup>
			
			<content type="action">
				<onclick lang="Python">plexee.getDirectoryWindow().menuClicked()</onclick>
			</content>
			
			<itemlayout height="40">
				<control type="label">
					<posy>0</posy>
					<posx>10</posx>
					<height>35</height>
					<width>280</width>
					
					<font>font22</font>
					<textcolor>66FFFFFF</textcolor>
					
					<aligny>center</aligny>
					<label>$INFO[ListItem.Property(custom:title)]</label>
				</control>
				
			</itemlayout>
			
			<focusedlayout height="40">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>280</width>
					<height>40</height>
					<colordiffuse>66FFFFFF</colordiffuse>
					<texture border="10">shapes/rounded_outline.png</texture>
				</control>
				
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>280</width>
					<height>40</height>
					<visible>Control.HasFocus(200)</visible>
					<texture border="10">shapes/blue_faded.png</texture>
				</control>
				
				<control type="label">
					<posy>0</posy>
					<posx>10</posx>
					<height>35</height>
					<width>280</width>
					
					<font>font22</font>
					<textcolor>66FFFFFF</textcolor>
					
					<aligny>center</aligny>
					<label>$INFO[ListItem.Property(custom:title)]</label>
				</control>
				
				<control type="label">
					<posy>0</posy>
					<posx>10</posx>
					<height>35</height>
					<width>280</width>
					
					<font>font22</font>
					<textcolor>FFFFFFFF</textcolor>
					
					<aligny>center</aligny>
					<visible>Control.HasFocus(200)</visible>
					<label>$INFO[ListItem.Property(custom:title)]</label>
				</control>
			</focusedlayout>
		</control>
		
		<control type="image">
			<posx>140</posx>
			<posy>110</posy>
			<width>40</width>
			<height>15</height>
			<visible>Container(200).HasPrevious</visible>
			<texture>secondary_page.png</texture>
		</control>
		
		<control type="image">
			<posx>140</posx>
			<posy>690</posy>
			<width>40</width>
			<height>15</height>
			<visible>Container(200).HasNext</visible>
			<texture flipy="true">secondary_page.png</texture>
		</control>

		<!--=========================================================================-->
		<!-- THUMB LIST =============================================================-->
		<!--=========================================================================-->
		
		<control type="panel" id="300">
			<posy>110</posy>
			<posx>350</posx>
			<width>880</width>
			<height>600</height>
			
			<preloaditems>1</preloaditems>
			<pagecontrol>2000</pagecontrol>
			
			<onleft>200</onleft>
			<onup lang="python">plexee.getDirectoryWindow().moveUpFromContent()</onup>
			
			<content type="action">
				<onclick lang="Python">plexee.getDirectoryWindow().contentClicked()</onclick>
			</content>
			
			<itemlayout width="175" height="300">
				<control type="image">
					<posx>10</posx>
					<posy>5</posy>
					<width>155</width>
					<height>228</height>
					<aspectratio>scale</aspectratio>
					<texture fallback="default_icons/case.png">$INFO[ListItem.Property(image0)]</texture>
				</control>
				<control type="image">
					<posx>135</posx>
					<posy>6</posy>
					<width>30</width>
					<height>30</height>
					<visible>IntegerGreaterThan(ListItem.Property(custom:unwatchedcount), 0) | StringCompare(ListItem.Property(custom:notviewed),1)</visible>
					<texture>status/oval.png</texture>
				</control>
				<control type="label">
					<posx>148</posx>
					<posy>6</posy>
					<width>30</width>
					<height>30</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>font12</font>
					<textcolor>white</textcolor>
					<label>[B]*$INFO[ListItem.Property(custom:unwatchedcount)][/B]</label>
					<visible>IntegerGreaterThan(ListItem.Property(custom:unwatchedcount), 0)</visible>
				</control>
				
				<control type="label">
					<posx>90</posx>
					<posy>235</posy>
					<width>160</width>
					<height>60</height>
					<wrapmultiline>true</wrapmultiline>
					<font>font18</font>
					<textcolor>66FFFFFF</textcolor>
					<align>center</align>
					<label>$INFO[ListItem.Property(custom:title)]</label>
				</control>
			</itemlayout>
			
			<focusedlayout width="175" height="300">
				<control type="image">
					<posx>6</posx>
					<posy>1</posy>
					<width>163</width>
					<height>236</height>
					<visible>Control.HasFocus(300)</visible>
					<texture border="10">shapes/blue_faded.png</texture>
				</control>
				
				<control type="image">
					<posx>10</posx>
					<posy>5</posy>
					<width>155</width>
					<height>228</height>
					<aspectratio>scale</aspectratio>
					<texture fallback="default_icons/case.png">$INFO[ListItem.Property(image0)]</texture>
				</control>
				<control type="image">
					<posx>135</posx>
					<posy>6</posy>
					<width>30</width>
					<height>30</height>
					<visible>IntegerGreaterThan(ListItem.Property(custom:unwatchedcount), 0) | StringCompare(ListItem.Property(custom:notviewed),1)</visible>
					<texture>status/oval.png</texture>
				</control>
				<control type="label">
					<posx>148</posx>
					<posy>1</posy>
					<width>30</width>
					<height>40</height>
					<align>center</align>
					<aligny>center</aligny>
					<font>font12</font>
					<textcolor>white</textcolor>
					<label>[B]*$INFO[ListItem.Property(custom:unwatchedcount)][/B]</label>
					<visible>IntegerGreaterThan(ListItem.Property(custom:unwatchedcount), 0)</visible>
				</control>

				<control type="label">
					<posx>90</posx>
					<posy>235</posy>
					<width>160</width>
					<height>60</height>
					<wrapmultiline>true</wrapmultiline>
					<font>font18</font>
					<textcolor>white</textcolor>
					<align>center</align>
					<label>$INFO[ListItem.Property(custom:title)]</label>
				</control>
			</focusedlayout>
		</control>
		
		<!-- SCROLLBAR ==============================================================-->
		<control type="scrollbar" id="2000">
			<posx>1248</posx>
			<posy>120</posy>
			<width>12</width>
			<height>580</height>
			 
			<texturesliderbackground border="6">scrollbar/background.png</texturesliderbackground>
			<texturesliderbar border="6">scrollbar/nub.png</texturesliderbar>
			<texturesliderbarfocus border="6">scrollbar/nub.png</texturesliderbarfocus>
			 
			<orientation>vertical</orientation>
			<showonepage>true</showonepage>
		</control>
		
		<!-- TOP MENU ============================================================== -->
		
		<!-- Music player -->
		<control type="group" id="599">
			<defaultcontrol>600</defaultcontrol>
			<visible>StringCompare(App.String(playingtheme),0) + Player.HasAudio</visible>
			
			<control type="button" id="600">
				<posx>430</posx>
				<posy>20</posy>
				<width>440</width>
				<height>60</height>

				<ondown>300</ondown>
				<onright>50</onright>
				<onup>-</onup>
				<onleft>200</onleft>

				<texturenofocus border="10">shapes/faded.png</texturenofocus>
				<texturefocus border="10">shapes/blue_faded.png</texturefocus>
				<onclick lang="python">mc.ActivateWindow(12006)</onclick>
			</control>			
			<control type="image">
				<posx>440</posx>
				<posy>25</posy>
				<width>40</width>
				<height>50</height>
				<aspectratio>stretch</aspectratio>
				<texture>default_icons/case_artist.png</texture>
			</control>
			<control type="label">
				<posx>490</posx>
				<posy>40</posy>
				<width>100</width>
			<visible>Player.HasAudio + Player.Playing</visible>
			   <font>Font_NowPlayingTrack</font>
			   <label>Now Playing:</label>
			   <textcolor>grey</textcolor>
			</control>
			<control type="label">
				<posx>490</posx>
				<posy>40</posy>
				<width>100</width>
			<visible>Player.HasAudio + Player.Paused</visible>
			   <font>Font_NowPlayingTrack</font>
			   <label> - Paused - </label>
			   <textcolor>grey</textcolor>
			</control>
			<control type="fadelabel">
				<posx>600</posx>
				<posy>40</posy>
				<width>260</width>
			   <font>Font_NowPlayingTrack</font>
			   <scroll>true</scroll>
			   <label>$INFO[MusicPlayer.Artist] - $INFO[MusicPlayer.Album] - $INFO[MusicPlayer.Title]</label>
			   <textcolor>white</textcolor>
			</control>
		</control>
		<!-- END: Music Player -->
		
		<control type="button" id="50">
			<posx>1122</posx>
			<posy>18</posy>
			<width>64</width>
			<height>64</height>
			
			<ondown>300</ondown>
			<onleft>600</onleft>
			
			<texturenofocus>buttons/home.png</texturenofocus>
			<texturefocus>buttons/home_focus.png</texturefocus>
			
			<onclick lang="python">plexee.getDirectoryWindow().homeClicked()</onclick>
		</control>
	</controls>
</window>